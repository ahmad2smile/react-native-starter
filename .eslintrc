{
	"root": true,
	"extends": ["standard"],
	"env": {
		"node": true,
		"jest": true,
		"browser": true
	},
	"globals": {
		"__DEV__": true
	},
	"parser": "babel-eslint",
	"plugins": ["prettier", "react"],
	"rules": {
		"react/jsx-uses-react": "error",
		"react/jsx-uses-vars": "error",
		"quotes": [
			2,
			"double",
			{
				"avoidEscape": true
			}
		],
		"indent": [2, "tab"],
		"no-tabs": 0,
		"arrow-parens": 0,
		"no-var": 2,
		"prefer-const": 1,
		"camelcase": [
			"error",
			{
				"properties": "always"
			}
		],
		"no-underscore-dangle": 2,
		"key-spacing": [
			"error",
			{
				"beforeColon": false,
				"afterColon": true,
				"align": "colon"
			}
		],
		"object-curly-spacing": ["error", "always"],
		"curly": ["error", "all"],
		"brace-style": ["error", "1tbs"]
	}
}
